<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_upgrade"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hfad.com.project.UpgradeActivity">

    <Button
        android:text="Level up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:backgroundTint="@android:color/holo_orange_light"
        android:textColor="@android:color/background_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:onClick="pepe+"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/pepe3"
        android:layout_marginStart="10dp"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/button"
        android:layout_toEndOf="@+id/button" />

    <TextView
        android:text="Points per click: +"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:id="@+id/Clickpunten"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_toEndOf="@+id/imageView2" />

    <Button
        android:text="Level up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:backgroundTint="@android:color/holo_orange_light"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:onClick="doge+"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/doge"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignStart="@+id/imageView2"
        android:id="@+id/imageView" />

    <TextView
        android:text="Points per second: +"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignStart="@+id/Clickpunten"
        android:layout_marginBottom="12dp"
        android:id="@+id/textView2" />

    <Button
        android:text="Level Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:id="@+id/button4"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true"
        android:backgroundTint="@android:color/holo_orange_light"
        android:textColor="@android:color/background_light" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/seal"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignStart="@+id/imageView"
        android:id="@+id/imageView3" />

    <TextView
        android:text="Points per second: +"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginBottom="12dp"
        android:id="@+id/textView7" />

    <TextView
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pepepoints"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dogepoints"
        android:layout_alignBaseline="@+id/Clickpunten"
        android:layout_alignBottom="@+id/Clickpunten"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sealpoints"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
